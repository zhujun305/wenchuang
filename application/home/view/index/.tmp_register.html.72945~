<script>
$(function(){
	$(".box_close").click(function(){
		$(".pop_box").hide();
	});
	$(".pop_box").click(function(){
		$(".pop_box").hide();
	});
	$("#xieyi").click(function(){
		$(".pop_box").show();
	});
	//是否同意网站服务条款
	$("#is_agree").click(function(){
		if($(this).is(':checked')){
			$(this).val("1");
		}else{
			$(this).val("");
		}
	});
	$(".submit").click(function(){
		var _unameobj=$('#uname');
		_uname=_unameobj.val();
		_kg=/\s+/;
		if(_kg.test(_uname)) {
			alert('您的帐号不能包含空格！');
			_unameobj.focus();
			return false;
		}else if(_uname.length<1) {
			alert('您的帐号长度不能为空！');
			_unameobj.focus();
			return false;
		}else if(_uname.length<6 || _uname.length>16) {
			alert('您的帐号长度必须在6位到16位之间！');
			_unameobj.focus();
			return false;
		}else if(!(/^[\w|\d|\@|\.|\-|\_]+$/.test(_uname))) {
			alert('帐号不能包含( 字母 数字 @ . - _ ) 以外的其他字符！');
			_unameobj.focus();
			return false;
		}
		var _pwd1obj=$('#pwd1');
		var _pwd2obj=$('#pwd2');
		if(_kg.test(_pwd1obj.val())) {
			alert('您的密码不能包含空格！');
			_pwd1obj.focus();
			return false;
		}else if(_pwd1obj.val().length<1) {
			alert('您的密码不能为空！');
			_pwd1obj.focus();
			return false;
		}
		if(_kg.test(_pwd2obj.val())) {
			alert('您的确认密码不能包含空格！');
			_pwd2obj.focus();
			return false;
		}else if(_pwd2obj.val().length<1) {
			alert('您的确认密码不能为空！');
			_pwd2obj.focus();
			return false;
		}
		if(_pwd1obj.val()!=_pwd2obj.val()) {
			alert('您输入的确认密码和密码不一致！');
			_pwd2obj.focus();
			return false;
		}
		if($('#imgcode').val().length<1){
			alert('您的验证码不能为空！');
			$('#imgcode').focus();
			return false;
		}
		if($("#is_agree").is(":checked")==false){
			alert("请先勾选阅读服务协议！");
			return false;
		}
		return true;
	});
});
</script>

