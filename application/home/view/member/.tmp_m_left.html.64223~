<script>
$(function(){
	$('.l-nav-list').click(function(){
		var old_isopen = $(".active").parents('.l-nav-list').attr("_isopen");
		var isopen = $(this).attr("_isopen");
		if(isopen!=old_isopen){
			if(isopen!=2){
		        $('.l-nav-list').removeClass('on').attr("_isopen",1).find('.l-nav-fork').hide();
		        $(this).addClass("on").attr("_isopen",2).find('.l-nav-fork').show();
			}else{
		        $(this).removeClass('on').attr("_isopen",1).find('.l-nav-fork').hide();
			}
		}
	});
});
</script>
