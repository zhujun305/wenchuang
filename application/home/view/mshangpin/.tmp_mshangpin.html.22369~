<script type="text/javascript">
$(function(){
	//全选
	$('#chkall').click(function(){
		var chk = $(this).is(":checked");
		$('.chklie').each(function(){
			$(this).attr('checked' , chk);
		});
	});
	$(".delbtn").click(function(){
		if(confirm('确定要删除选中的数据吗?')){
			var url = $(this).attr("_var");
			location.href = url;
		}
	});
	//批量删除
	$("#delallbtn").click(function(){
		var obj = $('input[type="checkbox"][id="id"]:checked');
		var len = obj.length;
		var ids = '';
		if(len == 0){
			alert('请选择要删除的数据');
		}else{
			if(confirm('确定要删除选中的数据吗?')){
				for(var i=0; i<len; i++){
					ids += $(obj[i]).val();
					if(i<len-1)
						ids += "-";
				}
				var url = "{:url('home/mshangpin/mspdelall')}"
				location.href = url + '?ids=' + ids ;
			}
		}
	});
	//搜索
	$("#searchBtn").click(function(){
		var paixu = $("#paixu").val();
		var ischk = $("#ischk").val();
		var status = $("#status").val();
		var title = $("#title").val();
		var url = "{:url('home/mshangpin/mshangpin')}?paixu="+paixu
			+"&ischk="+ischk+"&status="+status+""+"&title="+title+"";
		location.href = url;
	});
});
</script>

