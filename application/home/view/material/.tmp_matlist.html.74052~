<script type="text/javascript">
$(function(){
	var listurl = "{:url('home/Material/matlist')}";
	$(".sb_cate").click(function(){
		var cate = $(this).attr("_val");
		location.href = listurl+"?cate="+cate+"&topic={$topic}&type={$type}";
	});
	$(".sb_topic").click(function(){
		var topic = $(this).attr("_val");
		location.href = listurl+"?cate={$cate}&topic="+topic+"&type={$type}";
	});
	$(".sb_order").click(function(){
		var type = $(this).attr("_val");
		location.href = listurl+"?cate={$cate}&topic={$topic}&type="+type+"";
	});
});
</script>
<script type="text/javascript">
jQuery(".banner").slide({titCell:".hd em",mainCell:".bd ul",effect:"fold",interTime:6000,autoPlay:true});
jQuery(".topNav").slide({type:"menu",titCell:"dd",targetCell:"ul",delayTime:0,defaultPlay:false});
</script>

